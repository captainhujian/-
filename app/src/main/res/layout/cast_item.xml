<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="15dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cast_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/cast_picture"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:background="@color/lightGrey"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/cast_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cast_card"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="12dp"
        android:text="蒂姆.罗宾斯"
        />
    <TextView
        android:id="@+id/en_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cast_name"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textSize="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="饰: 安迪.杜佛兰 AndyDufresne"/>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>