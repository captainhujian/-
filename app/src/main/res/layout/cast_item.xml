<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cast_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp">
        <ImageView
            android:id="@+id/cast_picture"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="fitXY"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/cast_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cast_card"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textSize="12dp"
        android:text="蒂姆.罗宾斯"
        />
    <TextView
        android:id="@+id/role_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cast_name"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textSize="10dp"
        android:text="饰: 安迪.杜佛兰 AndyDufresne"/>


</android.support.constraint.ConstraintLayout>