<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:layout_marginLeft="@dimen/margin_size_large"
    android:layout_marginRight="@dimen/margin_size_large"
    android:layout_marginBottom="@dimen/margin_size_small">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/e3_transparent_grey">
        <com.shehuan.niv.NiceImageView
            android:id="@+id/resource_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/resource_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/resource_picture"
            android:layout_centerVertical="true"
            android:text="沙茶"
            />
        <TextView
            android:id="@+id/need_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="VIP免费观看"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>