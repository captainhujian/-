<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_size_small"
    android:layout_marginLeft="@dimen/margin_size_small"
    android:layout_marginRight="@dimen/margin_size_small"
    app:cardCornerRadius="@dimen/margin_size_small"
    android:elevation="@dimen/margin_size_large"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/margin_size_large"
            android:layout_marginTop="@dimen/margin_size_large"
            app:cardCornerRadius="@dimen/margin_size_tiny"
            >
            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No.1"
                android:textSize="12dp"
                android:textColor="#5C4033"
                android:background="#F4A460"

                />
        </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_size_tiny">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_tiny"
            android:layout_marginLeft="@dimen/margin_size_large"
            android:layout_marginRight="@dimen/margin_size_small"
            android:layout_marginBottom="@dimen/margin_size_large"
            app:cardCornerRadius="@dimen/margin_size_small"
            android:elevation="@dimen/margin_size_large"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_size_tiny">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="123"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_tiny"
                    android:textSize="16sp"
                    android:text="abc"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/origin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="abc"
                android:layout_marginRight="@dimen/margin_size_small"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >
                <com.hedgehog.ratingbar.RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:halfstart="true"
                    android:clickable="false"
                    app:starEmpty="@drawable/ic_star_normal"
                    app:starFill="@drawable/ic_star_selected"
                    app:starHalf="@drawable/ic_star_half"
                    app:starImageHeight="12dp"
                    app:starImageWidth="12dp"
                    app:starImagePadding="2dp"
                    android:layout_marginRight="@dimen/margin_size_tiny"
                    android:visibility="visible"
                    />
                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >
                <TextView
                    android:id="@+id/director_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc/abc"
                    android:textSize="13dp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginRight="30dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_size_large"
                >

                <TextView
                    android:id="@+id/genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc"
                    android:textSize="13dp"
                    android:singleLine="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    />
                <TextView
                    android:id="@+id/durations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="abc"
                    android:textSize="13dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>





</android.support.v7.widget.CardView>
