<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/praise_rank_card"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                >
                <TextView
                    android:id="@+id/praise_rank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="No.1"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/grey"
                    />
            </android.support.v7.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/margin_size_small">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="15dp"
                    >
                    <ImageView
                        android:id="@+id/praise_image"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"/>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:id="@+id/praise_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:text="123"
                            android:textColor="#000"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >
                        <com.hedgehog.ratingbar.RatingBar
                            android:id="@+id/praise_rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:halfstart="true"
                            android:clickable="false"
                            app:starEmpty="@drawable/ic_star_normal"
                            app:starFill="@drawable/ic_star_selected"
                            app:starHalf="@drawable/ic_star_half"
                            app:starImageHeight="12dp"
                            app:starImageWidth="12dp"
                            app:starImagePadding="2dp"
                            android:layout_marginRight="5dp"
                            android:visibility="visible"
                            />
                        <TextView
                            android:id="@+id/praise_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="abc"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                        <TextView
                            android:id="@+id/praise_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="abc/abc"
                            android:textSize="13dp"
                            android:lineSpacingExtra="3dp"
                            android:layout_marginRight="20dp"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/praise_pubdates_card"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        app:layout_constraintTop_toBottomOf="@id/hot_movie_collect"
                        android:layout_marginTop="5dp"
                        app:cardElevation="0dp"
                        android:visibility="gone"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/red_card_style">
                            <TextView
                                android:id="@+id/praise_pubdates"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textSize="10dp"
                                android:text="06月21日"
                                android:layout_centerInParent="true"
                                android:textColor="#ff0000"
                                />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>