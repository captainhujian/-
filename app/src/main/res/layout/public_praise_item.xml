<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/praise_rank_card"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                >
                <TextView
                    android:id="@+id/praise_rank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="No.1"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:background="@color/grey"
                    />
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginRight="@dimen/margin_size_small">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="15dp"
                    >
                    <ImageView
                        android:id="@+id/praise_image"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"/>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:id="@+id/praise_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="123"
                            android:textColor="#000"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        >
                        <com.hedgehog.ratingbar.RatingBar
                            android:id="@+id/praise_rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:halfstart="true"
                            android:clickable="false"
                            app:starEmpty="@drawable/ic_star_normal"
                            app:starFill="@drawable/ic_star_selected"
                            app:starHalf="@drawable/ic_star_half"
                            app:starImageHeight="15dp"
                            app:starImageWidth="15dp"
                            app:starImagePadding="2dp"
                            android:layout_marginRight="5dp"
                            android:visibility="visible"
                            />
                        <TextView
                            android:id="@+id/praise_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="abc"
                            />
                    </LinearLayout>
                        <TextView
                            android:id="@+id/praise_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="abc/abc"
                            android:lineSpacingExtra="2dp"
                            android:layout_marginRight="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</android.support.constraint.ConstraintLayout>