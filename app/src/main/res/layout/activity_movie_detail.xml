<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.Toolbar
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/themeGreen">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:gravity="center|bottom"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"
                android:text="电影"
                android:textSize="15dp" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/detail_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="15dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="85dp"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/origin_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:text="abc"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="abc"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detail_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="abc/abc/adb：abc>" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/message">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rating_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="豆瓣评分"
                    android:textSize="10dp" />

                <LinearLayout
                    android:id="@+id/rating_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_title"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/rating_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:text="abc"

                            android:textSize="25dp" />

                        <com.hedgehog.ratingbar.RatingBar
                            android:id="@+id/movie_detail_rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            app:halfstart="true"
                            app:starEmpty="@drawable/ic_star_normal"
                            app:starFill="@drawable/ic_star_selected"
                            app:starHalf="@drawable/ic_star_half"
                            app:starImageHeight="12dp"
                            app:starImagePadding="2dp"
                            app:starImageWidth="12dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="★★★★★"
                                android:textScaleX="0.8"
                                android:textSize="10dp" />

                            <ProgressBar
                                android:id="@+id/progress_bar_h5"
                                style="@style/update_progress_horizontal"
                                android:layout_width="150dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center|bottom"
                                android:layout_marginLeft="5dp"
                                android:max="100"
                                android:progress="50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:layout_marginLeft="17.5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="★★★★"
                                android:textScaleX="0.8"
                                android:textSize="10dp" />

                            <ProgressBar
                                android:id="@+id/progress_bar_h4"
                                style="@style/update_progress_horizontal"
                                android:layout_width="150dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center|bottom"
                                android:layout_marginLeft="5dp"
                                android:max="100"
                                android:progress="50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:layout_marginLeft="25dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="★★★"
                                android:textScaleX="0.8"
                                android:textSize="10dp" />

                            <ProgressBar
                                android:id="@+id/progress_bar_h3"
                                style="@style/update_progress_horizontal"
                                android:layout_width="150dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center|bottom"
                                android:layout_marginLeft="5dp"
                                android:max="100"
                                android:progress="50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:layout_marginLeft="32.5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="★★"
                                android:textScaleX="0.8"
                                android:textSize="10dp" />

                            <ProgressBar
                                android:id="@+id/progress_bar_h2"
                                style="@style/update_progress_horizontal"
                                android:layout_width="150dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center|bottom"
                                android:layout_marginLeft="5dp"
                                android:max="100"
                                android:progress="50" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:layout_marginLeft="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="★"
                                android:textScaleX="0.8"
                                android:textSize="10dp" />

                            <ProgressBar
                                android:id="@+id/progress_bar_h1"
                                style="@style/update_progress_horizontal"
                                android:layout_width="150dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center|bottom"
                                android:layout_marginLeft="5dp"
                                android:max="100"
                                android:progress="50" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/total_rateing_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating_body"
                    android:layout_alignRight="@id/rating_body"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:text="123456人评分"
                    android:textSize="10dp"

                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/introduction_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="简介"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/rating" />

        <TextView
            android:id="@+id/introduction"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:lineSpacingExtra="4dp"
            android:scrollbars="vertical"
            android:text="故事发生在1947年，银行家安迪（Andy）被指控枪杀了妻子及其情人，安迪被判无期徒刑，这意味着他将在肖申克监狱中渡过余生。瑞德（Red）1927年因谋杀罪被判无期徒刑，数次假释都未获成功。他成为了肖申克监狱中的“权威人物”，只要你付得起钱，他几乎有办法搞到任何你想要的东西：香烟、糖果、酒，甚至是大麻。每当有新囚犯来的时候，大家就赌谁会在第一个夜晚哭泣。瑞德认为弱不禁风、书生气十足的安迪一定会哭，结果安迪的沉默使他输掉了两包烟，但同时也使瑞德对他另眼相看。"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/introduction_title" />

        <TextView
            android:id="@+id/cast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="影人"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/introduction"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cast_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@id/cast_title">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/stage_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cast_recycler_view"
            android:text="预告片 / 视频评论 / 剧照"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
    <android.support.v7.widget.CardView
        android:id="@+id/stage_photo_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/stage_photo"
       >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/stage_photo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/comment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/stage_photo_card_view"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cast_recycler_view">

            <TextView
                android:id="@+id/short_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="短评"
                android:textSize="18dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/short_comment">
            </android.support.v7.widget.RecyclerView>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@id/comment_card"/>
</android.support.constraint.ConstraintLayout>

</ScrollView>